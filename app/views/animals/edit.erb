<H1 class="main-header">Edit the Uploaded Animal</H1>


  <form action="/animals/<%= @animal.id %>" method="post">
    <input type="hidden" name="_method" value="PUT">
    <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text"   name="animal[name]" placeholder="name">
    <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text"   name="animal[species]" placeholder="species">
    <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text"   name="animal[image_url]" placeholder="Image">
    <input class="block w-70 mar-t-2 mar-b-3 pad-2 round-1 text-c   submit center" type="submit" value="Edit!">
  </form>

